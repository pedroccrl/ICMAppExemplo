<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICMAppExemplo.View.FaculdadesPage"
             Title="Faculdades">
  <StackLayout>
    <ListView
      x:Name="lvFaculdades"
      ItemsSource="{Binding Faculdades}"
      HasUnevenRows="True"
      >
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout
            Spacing="0"
            Padding="12">
              <StackLayout
              Orientation="Horizontal"
              Spacing="0"
              >
                <Image
                  WidthRequest="64"
                  Aspect="AspectFit"
                  Source="{Binding Foto}"/>
                <Label Text=""/>
              </StackLayout>
              <Label Text="{Binding Local}"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>